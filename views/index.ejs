<!DOCTYPE html>
<html lang="ro">
<head>
  <meta charset="UTF-8">
  <title>HYGHBYTE // GAME VAULT</title>
  <link rel="stylesheet" href="/styles.css">
</head>

<body>

<header class="hb-header">
  <a href="/" class="hb-logo-main">HYGHBYTE</a>
  <span class="hb-logo-sub">GAME VAULT</span>
</header>

<main class="hb-main">

  <% if (featuredGames.length > 0) { %>
  <section class="featured-section">
    <h2>JOCURI SUGERATE</h2>

    <div class="featured-slider">

      <button id="prev" class="featured-arrow">❮</button>

      <div class="featured-slide">
        <img id="featured-bg" class="featured-img-bg">
        <div class="featured-info">
          <img id="featured-cover" class="featured-cover">
          <div class="featured-text">
            <h3 id="featured-title"></h3>
            <p id="featured-genres"></p>
            <a id="featured-link" target="_blank" class="featured-play-now">▶ Joacă acum</a>
          </div>
        </div>
      </div>

      <button id="next" class="featured-arrow">❯</button>
    </div>
  </section>
  <% } %>

  <section class="hb-grid">
    <% games.forEach(g => { %>
      <article class="hb-card">
        <img src="<%= g.imageUrl %>" class="hb-card-img">
        <div class="hb-card-info">
          <h3><%= g.title %></h3>
          <p><%= g.genres %></p>
          <a href="<%= g.link %>" target="_blank" class="hb-button-primary">▶ Joacă acum</a>
        </div>
      </article>
    <% }) %>
  </section>

</main>

<script>
const featuredGames = <%- JSON.stringify(featuredGames) %>;
</script>
<script src="/script.js"></script>

</body>
</html>
