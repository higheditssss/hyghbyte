<!DOCTYPE html>
<html>
<head>
  <title>Admin</title>
  <style>
    body { background:#111; color:white; font-family:sans-serif; padding:20px; }
    input,select { width:100%; padding:8px; margin-bottom:10px; }
    .box { background:#222; padding:20px; border-radius:10px; margin-bottom:20px; }
    table { width:100%; margin-top:20px; }
    td { padding:8px; border-bottom:1px solid #444; }
    button { padding:6px 14px; }
  </style>
</head>

<body>
<h1>Admin Panel</h1>

<div class="box">
  <h3>Adaugă joc</h3>

  <form action="/admin/add" method="POST">
    <input type="text" name="title" placeholder="Titlu" required>
    <select name="source">
      <option value="steam">Steam</option>
      <option value="itch">itch.io</option>
    </select>
    <input type="text" name="link" placeholder="Link joc" required>
    <input type="text" name="imageurl" placeholder="URL poză" required>
    <input type="text" name="genres" placeholder="Genuri (ex: Horror, Action)">
    <input type="text" name="badge" placeholder="FREE / PAID / DEMO">

    <button type="submit">Adaugă</button>
  </form>
</div>


<div class="box">
  <h3>Jocuri existente</h3>
  <table>
    <% games.forEach(g => { %>
      <tr>
        <td><%= g.id %></td>
        <td><%= g.title %></td>
        <td><%= g.source %></td>
        <td><%= g.genres %></td>
        <td><%= g.badge %></td>
        <td>
          <form action="/admin/delete/<%= g.id %>" method="POST">
            <button type="submit">Șterge</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</div>

</body>
</html>
